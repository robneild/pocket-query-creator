<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.pquery"
    android:versionCode="12"
    android:versionName="2.2" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" >
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name="HelloTabWidget"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="Dialog4_GPS"
            android:label="Logging in" >
        </activity>
        <activity
            android:name="Dialog4_Map"
            android:label="Logging in" >
        </activity>
        <activity
            android:name="Dialog4_Clipboard4_Clipboard"
            android:label="Logging in" >
        </activity>
        <activity
            android:name="griddialog"
            android:label="TEST" >
        </activity>
        <activity
            android:name="PocketQuery"
            android:label="Pocket Query Creator" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!--
            Make visible to google maps ?
            <intent-filter>
                <action android:name="android.intent.action.SEND" >
                </action>
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name="PreferencesFromXml"
            android:label="@string/settings" >
        </activity>
        <activity
            android:name="Dialog1"
            android:label="Pocket Query Creator" >
        </activity>
        <activity
            android:name="CreationProgress"
            android:label="Creating Pocket Query"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name=".Dialog4"
            android:label="Query parameters" >
        </activity>
        <activity
            android:name=".Dialog3"
            android:label="Select Query center point" >
        </activity>
        <activity
            android:name="MapsActivity"
            android:label="Long press to select point then press back" >
        </activity>
        <activity
            android:name="Help"
            android:label="@string/help" >
        </activity>
        <activity
            android:name="About"
            android:label="@string/about" >
        </activity>
        <activity
            android:name=".Dialog2"
            android:label="Optional filters " >
        </activity>
        <activity
            android:name="net.bgreco.DirectoryPicker"
            android:label="@string/directory_picker_title">
             <intent-filter>  
                <action android:name="your.action.string"/>  
                <category android:name="android.intent.category.DEFAULT" />  
            </intent-filter> 
        </activity>

        <service
            android:name="CreationService"
            android:label="CreationService" >
        </service>
    </application>

</manifest>